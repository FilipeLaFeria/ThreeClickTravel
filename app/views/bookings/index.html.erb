</div> %>

<div class="main-container">
  <div class="container">
    <div id="header" style="margin-top: 8px; color:#D62828;">
      <h1>My bookings</h1>
    </div>
    <div class="row">
      <div class="col-12 col-lg-6">


      <% @bookings.each_with_index do |booking, index| %>
        <div class="card-grid">
          <div class="card-offer">
            <%= image_tag booking.offer.destination.accommodation.url %>
            <div class="card-offer-infos">
              <div class="card-offer-title">
                <div class="card-offer-title-city">
                  <h2><%= booking.offer.destination.city_name %></h2>
                </div>
                <div class="card-offer-title-number radius-number3">
                  <p><%= index + 1 %></p>
                </div>
              </div>
              <div class="card-offer-details">
                <%# <%= image_tag 'flight_icon.png' %>
                <div class="card-offer-flight">
                  <p id="info-title">Flight</p>
                  <p><%= booking.offer.destination.flight.company %></p>
                  <p><%= booking.offer.destination.flight.departure_start %> - <%= booking.offer.destination.flight.duration %></p>
                  <p id="info-price"><strong>Price: <%= booking.offer.destination.flight.price %>€</strong></p>
                </div>
                <%# <%= image_tag 'flight_icon.png' %>
                <div class="card-offer-accommodation">
                  <p id="info-title">Accommodation</p>
                  <p> <%= booking.offer.destination.accommodation.address %> </p>
                  <p> <%= booking.offer.destination.accommodation.check_in %> (2 nights)</p>
                  <p id="info-price"><strong> Price: <%= booking.offer.destination.accommodation.price %>€</strong></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      <div class="col-12 col-lg-6">
        <div id="map"
          style="width: 100%; height: 480px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>

