<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="trail">
          <div class="trail-circle doing">
            <h1>1</h1>
            <p>Pick a Destination</p>
          </div>
          <div class="trail-circle undone">
            <h1>2</h1>
            <p>Select Flight & Accommodation</p>
          </div>
          <div class="trail-circle undone">
            <h1>3</h1>
            <p>Check Out</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div id="header" style="margin-top: 8px; color:#D62828;">
    <% if @destinations.empty? %>
      <h2>No destination within that budget or dates</h2>
      <h3>please try again</h3>
    <% else %>
      <h2>Pick one destination</h2>
    <% end %>
    </div>
    <div class="cards">
      <% if params[:param1] == 'btn-all-destinations' %>
        <% @destinations_show = @destinations %>
      <% else %>
        <% @destinations_show = @destinations.first(3) %>
      <% end %>
      <% @destinations_show.each_with_index do |destination, index| %>
        <%= link_to destination_offers_path(destination), class:'text-decoration-none' do %>
          <div class="card-destination-full">
            <div class="card-destinations">
              <div class="card-destinations-number d-flex">
                <h3 class="mr-3 radius-number2"><%= index + 1 %></h3>
              </div>
                <%= image_tag destination.flight.url %>
              <div class="card-destinations-infos">
                <h2><%= destination.flight.city_name %>, <%= destination.flight.country_name %></h2>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="buttons">
    <%= link_to "<< Back", :back, class: "button-secondary" %>
    <% if params[:param1] != 'btn-all-destinations' %>

      <%= link_to "MORE SUGGESTIONS", destinations_path(param1: 'btn-all-destinations'), class: "button-primary" %>

    <% end %>
  </div>

</div>
